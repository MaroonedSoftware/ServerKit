{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["es2022", "DOM", "DOM.Iterable"],
        "types": ["vite/client"],
        "target": "ES2022",
        "moduleResolution": "Bundler",
        "module": "ES2022",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true
    }
}
